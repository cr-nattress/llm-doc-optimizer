{
  "name": "llm-doc-optimizer",
  "version": "1.0.0",
  "description": "Serverless document optimization service using LLMs",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "netlify dev",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run test/unit",
    "test:e2e": "VITEST_ENV=e2e vitest run test/e2e",
    "test:run": "vitest run",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [
    "netlify",
    "serverless",
    "document-optimization",
    "llm"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@netlify/functions": "^4.2.2",
    "@types/aws-lambda": "^8.10.152",
    "@types/busboy": "^1.5.4",
    "@types/node": "^24.3.0",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "form-data": "^4.0.4",
    "husky": "^9.1.7",
    "netlify-cli": "^23.1.4",
    "node-fetch": "^3.3.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.0.3",
    "fastify": "^5.5.0",
    "openai": "^5.13.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "zod": "^3.25.76"
  }
}
