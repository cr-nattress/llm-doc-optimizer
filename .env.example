# LLM Document Optimizer - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_ORG_ID=org-your-organization-id-here
# OPENAI_PROJECT_ID=proj_your-project-id-here

# Security (REQUIRED)
JWT_SECRET=your-very-long-secure-jwt-secret-key-at-least-32-characters-long

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
LOG_LEVEL=info
PORT=8888

# CORS and Security
CORS_ORIGIN=*
ALLOWED_ORIGINS=*
FORCE_HTTPS=false

# =============================================================================
# RATE LIMITING AND PERFORMANCE
# =============================================================================

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# File and Request Limits
MAX_FILE_SIZE=10485760
MAX_REQUEST_TIMEOUT=300000
CONCURRENCY_LIMIT=10

# =============================================================================
# ERROR REPORTING AND MONITORING
# =============================================================================

# Error Reporting
ERROR_REPORTING_ENABLED=false
# ERROR_REPORTING_ENDPOINT=https://your-error-service.com/api/errors
# ERROR_REPORTING_API_KEY=your-error-reporting-api-key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8889
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# DATABASE (OPTIONAL - FOR FUTURE USE)
# =============================================================================

# Database Configuration
# DATABASE_URL=postgresql://user:password@localhost:5432/llm_doc_optimizer
# DATABASE_MAX_CONNECTIONS=20
# DATABASE_CONNECTION_TIMEOUT=30000

# =============================================================================
# CDN AND CACHING
# =============================================================================

# CDN Configuration
CDN_ENABLED=false
# CDN_URL=https://your-cdn.com
CACHE_TTL=3600
# REDIS_URL=redis://localhost:6379

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
# BACKUP_STORAGE_URL=s3://your-backup-bucket

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_STREAMING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_DOCUMENT_ANALYSIS=true

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL Configuration
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# =============================================================================
# NETLIFY SPECIFIC (AUTO-POPULATED IN NETLIFY)
# =============================================================================

# Netlify Environment Variables (automatically set by Netlify)
# NETLIFY_ENV=production
# NETLIFY_SITE_ID=your-site-id
# NETLIFY_DEPLOY_URL=https://your-deploy-url.netlify.app

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Webhook Configuration
# WEBHOOK_SECRET=your-webhook-secret
# WEBHOOK_ENDPOINTS=https://your-app.com/webhook1,https://your-app.com/webhook2

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================

# Development
# DEBUG=llm-doc-optimizer:*
DISABLE_TELEMETRY=false

# =============================================================================
# PRODUCTION RECOMMENDATIONS
# =============================================================================

# For production environments, ensure:
# - NODE_ENV=production
# - JWT_SECRET is at least 64 characters long
# - ERROR_REPORTING_ENABLED=true
# - FORCE_HTTPS=true
# - CORS_ORIGIN is set to your specific domain(s)
# - All sensitive data is properly secured
# - Monitoring and error reporting are configured